---
import SectionTitle from "./SectionTitle.astro";
type PageOptions = "home" | "politics";
interface Props {
  page: PageOptions;
}
const { page } = Astro.props;
---

<section class="home-5" id="home-5">
  {
    page === "home" && (
    <SectionTitle
      title="Redes habilitadas"
      subtitle="Nuestro pricipales Partners"
      subColor="text-white"
    />

    <div class="flex gap-12 justify-center items-center mt-14">
      <div class="slide">
        <img src="/images/networks-logo/visa.png" alt="visa" />
      </div>
      <div class="slide">
        <img src="/images/networks-logo/mastercard.png" alt="mastercard" />
      </div>
      <div class="slide">
        <img src="/images/networks-logo/american-express.png" alt="express" />
      </div>
      <div class="slide">
        <img src="/images/networks-logo/pago-facil.png" alt="pago facil" />
      </div>
      <div class="slide-small">
        <img src="/images/networks-logo/rapipago.png" alt="rapipago" id="rapipago"/>
      </div>
      <div class="slide-small">
        <img src="/images/networks-logo/pagomiscuentas.png" alt="pagomiscuentas" />
      </div>
      <div class="slide-small">
        <img src="/images/networks-logo/payway.png" alt="payway" />
      </div>
    </div>

    <hr class="w-full mt-20 mb-16 bg-[#ffffff] opacity-80"/>)
  }

  <div class="w-full flex flex-col items-center">
    <figure class="mb-6">
      <img
        src="/images/logo-bitcom-light.png"
        alt="logo-bitcompay"
        class="h-6"
      />
    </figure>
    <figure class="mb-8">
      <img src="/images/data-fiscal.png" class="h-20" />
    </figure>
    <ul class="flex justify-center gap-6">
      <li class="text-[#FFFFFF] underline text-xs opacity-80 cursor-pointer">
        Politicas de privacidad
      </li>
      <li class="text-[#FFFFFF] underline text-xs opacity-80 cursor-pointer">
        Defensa del consumidor
      </li>
    </ul>
    <p class="text-[#FFFFFF] w-full text-center mt-6 mb-2">
      Â© 2024 Bitcompay. Todos los derechos reservados
    </p>
  </div>
</section>

<style>
  .home-5 {
    background-color: #212121;
    border-top-left-radius: 90px;
    border-top-right-radius: 90px;
    padding: 4rem 2rem 0.5rem;
  }

  .home-5-tittle {
    padding-top: 40vh;
    padding-left: 10vw;
    display: flex;
    flex-direction: column;
    justify-content: start;
    margin-bottom: 5rem;
  }

  .home-5-tittle h2 {
    font-size: 2.5vw;
    color: white;
    margin-bottom: 5px;
    font-family: "Spline Sans", sans-serif;
  }

  .home-5-tittle span {
    color: #1bdfb7;
  }

  .home-5-tittle p {
    font-size: 1.6vw;
    color: white;
    font-family: "Roboto", sans-serif;
  }
  .slide img{
    width: 5vw;
    height:auto;
  }
  .slide-small img{
    width: 12vw;
    height:auto;
  }
  #rapipago{
    width: 8vw;
    height:auto;
  }
  .slider {
    width: 60vw;
    height: auto;
    margin: auto;
    overflow: hidden;
    background-color: #212121;
    border-radius: 15px;
    padding: 3vw 2rem;
  }

  .slider .slide-track {
    display: flex;
    animation: scroll 50s linear infinite;
    -webkit-animation: scroll 40s linear infinite;
    width: calc(22vw * 20);
    gap: 1.3vw;
  }

  .slider .slide {
    flex: 0 0 auto;
  }

  .slider .slide img {
    width: 6vw;
    height: 6vw;
    object-fit: contain;
  }

  @keyframes scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(calc(-22vw * 10));
    }
  }

  .logo-derechos {
    height: 2vw;
    width: auto;
  }

  @media screen and (max-width: 1024px) {
    .home-5-tittle h2 {
      font-size: 4.5vw;
    }

    .home-5-tittle p {
      font-size: 2vh;
    }

    .container {
      display: flex;
      justify-content: center;
      align-items: center;
      padding-top: 17vh;
    }

    .container ul {
      gap: 4vw;
    }

    .logo-derechos {
      height: 2.1vw;
      width: auto;
    }
  }

  @media screen and (max-width: 768px) {
    .home-5-tittle {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding-left: 0vw;
    }

    .container {
      display: flex;
      justify-content: center;
      align-items: center;
      padding-top: 10vh;
    }

    .container ul {
      gap: 4vw;
    }

    .logo-derechos {
      height: 2.2vw;
      width: auto;
    }
  }

  @media screen and (max-width: 500px) {
    .home-5-tittle h2 {
      font-size: 3.8vh;
    }
  }

  @media screen and (max-width: 320px) {
    .home-5-tittle h2 {
      font-size: 3.8vh;
    }
  }

