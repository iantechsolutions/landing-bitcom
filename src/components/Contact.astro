---
import SectionTitle from "./SectionTitle.astro";
import FieldFrom from "./ui/FieldFrom.astro";
---

<section class="flex flex-col items-center mt-10" id="contact">
  <SectionTitle
    title="CONTÁCTENOS"
    subtitle="Seleccione el medio de contacto preferido y conversemos"
  />
  <div class="contact-container">
    <form class= "grid grid-cols-2 gap-x-8">
      <FieldFrom
        label="Nombre y apellido"
        id="name"
        placeholder="Ingrese su nombre completo"
      />
      <FieldFrom
        label="CUIL/CUIT"
        id="cuil"
        placeholder="Ingrese su CUIL/CUIT"
      />
      <FieldFrom label="Mail" id="email" placeholder="Ingrese su mail" />

      <FieldFrom
        label="Empresa"
        id="company"
        placeholder="Ingrese el nombre de su empresa"
      />
      <FieldFrom label="Teléfono" id="phone" tel />
      <FieldFrom label="Motivo" id="motive" motive />
      <FieldFrom
        label="Mensaje"
        id="message"
        placeholder="Ingrese su mensaje"
        textArea
      />
    </form>
  </div>
</section>

<style>
  .contact-container {
    padding: 3vw;
    margin-top: 5vh;
    text-align: center;
    width: 70%;
  }

  h1 {
    color: #1bdfb7;
    font-weight: 500;
    font-size: 2.3vw;
  }

  p {
    font-size: 1.1vw;
    font-weight: 500;
    color: #666;
    margin-bottom: 2vh;
  }
</style>
