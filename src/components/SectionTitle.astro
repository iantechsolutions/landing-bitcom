---
interface Props{
    title: string;
    subtitle: string;
}
const {title, subtitle} = Astro.props;
---

<div class="flex flex-col items-center text-center">
    <h2 class="text-[#85ce81] uppercase text-[1.1rem] font-[600]">{title}</h2>
    <p class="font-[500] w-[60%] text-[1.4rem]">{subtitle}</p>
</div>