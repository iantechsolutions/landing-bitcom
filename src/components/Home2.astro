<script>
  let slideIndex = 0;
  let startX = 0;
  let isSwiping = false;

  const sliderContainer = document.querySelector('.slide-track');
  const slides = document.querySelectorAll('.slide');
  const slideWidth = slides[0].clientWidth;

  function showSlides(n) {
    slideIndex = n;


    if (slideIndex < 0) {
      slideIndex = slides.length - 2;
    } else if (slideIndex >= slides.length - 1) {
      slideIndex = 0;
    }

    const offset = -slideIndex * slideWidth;
    if (sliderContainer instanceof HTMLElement) {
      sliderContainer.style.transform = `translateX(${offset}px)`;
    } else {
      console.error("sliderContainer is not an HTMLElement");
    }
  }

  function moveSlide(n) {
    showSlides(slideIndex + n);
  }

  function touchStart(e) {
    startX = e.touches[0].clientX;
    isSwiping = true;
  }

  function touchMove(e) {
    if (!isSwiping) return;
    const currentX = e.touches[0].clientX;
    const diffX = currentX - startX;

    if (diffX > 50) {
      moveSlide(-1);
      isSwiping = false;
    } else if (diffX < -50) {
      moveSlide(1);
      isSwiping = false;
    }
  }

  function touchEnd() {
    isSwiping = false;
  }

  if (sliderContainer) {
    sliderContainer.addEventListener('touchstart', touchStart);
    sliderContainer.addEventListener('touchmove', touchMove);
    sliderContainer.addEventListener('touchend', touchEnd);

    showSlides(slideIndex);
  }
</script>

