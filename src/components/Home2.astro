<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Slider Responsive</title>

  <style>
    .home-2 {
      background-image: url('/images/2560 h2.png');
      height: 100vh;
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    }

    .home-2-tittle {
      display: flex;
      flex-direction: column;
      padding-top: 10vh;
      padding-left: 10vw;
      padding-bottom: 2vh;
    }

    .home-2-tittle h2 {
      font-size: 2.5vw;
      color: white;
      font-family: "Spline Sans", sans-serif;
    }

    .home-2-tittle span {
      color: #1bdfb7;
    }

    .home-2-tittle p {
      font-size: 1.6vw;
      font-family: "Roboto", sans-serif;
      font-weight: 300;
      color: white;
    }

    .home-2-tittle p span {
      color: white;
      font-weight: 700;
    }

    .home-2-container {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .grid-container {
      display: grid;
      grid-template-columns: repeat(3, 3fr);
      gap: 1vw;
      margin-top: 9vh;
    }

    .grid-container figure img {
      height: 31vh;
      width: 26.5vw;
    }

    .sliderh2 {
      display: none;
    }

    @media screen and (max-width: 1024px) {
      .home-2-tittle h2 {
        font-size: 4.5vh;
      }
      .home-2-tittle p {
        font-size: 2vh;
      }
      .grid-container figure img {
        height: 22vh;
        width: 28vw;
      }
    }

    @media screen and (max-width: 768px) {
      .grid-container figure img {
        height: 19vh;
        width: 30vw;
      }
    }

    @media screen and (max-width: 692px) {
      .sliderh2 {
        display: flex;
        align-items: center;
        width: 100%;
        overflow: hidden;
        position: relative;
      }
      .sliderh2 .slide-track {
        display: flex;
        transition: transform 0.5s ease-in-out;
      }
      .sliderh2 .slide {
        min-width: 100%;
        box-sizing: border-box;
      }
      .sliderh2 .slide img {
        width: 100%;
        display: block;
      }
      .prev, .next {
        display: none; 
      }
      .grid-container {
        display: none;
      }
    }

    @media screen and (max-width: 425px) {
      .home-2-tittle {
        align-items: center;
        justify-content: center;
        padding-top: 10vh;
        padding-left: 2vw;
      }
      .home-2-tittle h2 {
        font-size: 7vw;
      }
      .home-2-tittle p {
        font-size: 4vw;
        text-align: center;
      }
    }
  </style>
</head>
<body>

<section class="home-2" id="home-2">
  <div class="home-2-tittle">
    <h2>
      Canales de <span>Recaudación:</span>
    </h2>
    <p>Con un solo contrato publique su <span>Marca en todas las Entidades de Recaudación</span> con mayor alcance de todo el País</p>
  </div>
  <div class="home-2-container">
    <div class="grid-container">
      <figure>
        <img src="/images/card1h2.png" alt="" />
      </figure>
      <figure>
        <img src="/images/card2h2.png" alt="" />
      </figure>
      <figure>
        <img src="/images/card3h2.png" alt="" />
      </figure>
      <figure>
        <img src="/images/card4h2.png" alt="" />
      </figure>
      <figure>
        <img src="/images/card5h2.png" alt="" />
      </figure>
      <figure>
        <img src="/images/card6h2.png" alt="" />
      </figure>
    </div>
  </div>

  <div class="sliderh2">
    <div class="slide-track">
      <!-- Duplicate first and last slides for infinite effect -->
      <div class="slide">
        <img src="/images/card6h2.png" alt="" />
      </div>
      <div class="slide">
        <img src="/images/card1h2.png" alt="" />
      </div>
      <div class="slide">
        <img src="/images/card2h2.png" alt="" />
      </div>
      <div class="slide">
        <img src="/images/card3h2.png" alt="" />
      </div>
      <div class="slide">
        <img src="/images/card4h2.png" alt="" />
      </div>
      <div class="slide">
        <img src="/images/card5h2.png" alt="" />
      </div>
      <div class="slide">
        <img src="/images/card6h2.png" alt="" />
      </div>
      <div class="slide">
        <img src="/images/card1h2.png" alt="" />
      </div>
    </div>
  </div>
</section>

<script>
  let slideIndex = 1;
let startX = 0;
let isSwiping = false;

const sliderContainer = document.querySelector('.slide-track') as HTMLElement;
const slides = document.querySelectorAll('.slide');
const slideWidth = slides[0].clientWidth;

function showSlides(n) {
  slideIndex = n;
  const offset = -slideIndex * slideWidth;
  sliderContainer.style.transition = 'transform 0.5s ease-in-out';
  sliderContainer.style.transform = `translateX(${offset}px)`;

  sliderContainer.addEventListener('transitionend', () => {
    if (slideIndex === 0) {
      sliderContainer.style.transition = 'none';
      slideIndex = slides.length - 2;
      sliderContainer.style.transform = `translateX(${-slideIndex * slideWidth}px)`;
    } else if (slideIndex === slides.length - 1) {
      sliderContainer.style.transition = 'none';
      slideIndex = 1;
      sliderContainer.style.transform = `translateX(${-slideIndex * slideWidth}px)`;
    }
  });
}

function moveSlide(n) {
  showSlides(slideIndex + n);
}

function touchStart(e) {
  startX = e.touches[0].clientX;
  isSwiping = true;
}

function touchMove(e) {
  if (!isSwiping) return;
  const currentX = e.touches[0].clientX;
  const diffX = currentX - startX;

  if (diffX > 50) {
    moveSlide(-1);
    isSwiping = false;
  } else if (diffX < -50) {
    moveSlide(1);
    isSwiping = false;
  }
}

function touchEnd() {
  isSwiping = false;
}

if (sliderContainer) {
  sliderContainer.addEventListener('touchstart', touchStart);
  sliderContainer.addEventListener('touchmove', touchMove);
  sliderContainer.addEventListener('touchend', touchEnd);

  showSlides(slideIndex);
}

</script>

</body>
</html>
