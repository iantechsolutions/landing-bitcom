<button class="btn-top" id="scrollToTopBtn"><img src="/images/btntop.png" alt=""></button>

<style>
    .btn-top {
        position: fixed;
        bottom: 20px;
        right: 20px;
        cursor: pointer;
        display: block; 
        background: none;
        border: none;
        padding: 0;
    }

</style>



<script>
    const scrollToTopBtn = document.getElementById('scrollToTopBtn');
    scrollToTopBtn.addEventListener('click', () => {
        window.scrollTo({
            top: 0,
            behavior: 'smooth'
        });
    });
</script>
